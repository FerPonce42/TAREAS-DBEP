                <Label Text="OTROS INTERESES" FontSize="18" FontAttributes="Bold" TextColor="White"/>
                <BoxView HeightRequest="1" BackgroundColor="White" Margin="0,5"/>
                <Label Text="• Taekwondo" FontSize="14" TextColor="White"/>
            </StackLayout>

            <!-- Sección Perfil Profesional, Experiencia Laboral y Formación con fondo gris claro -->
            <StackLayout BackgroundColor="#d8d4d4" Padding="10">
