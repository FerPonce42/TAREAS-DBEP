<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamFormCV.MainPage"
             BackgroundColor="#0D1B2A2">

    <StackLayout Padding="20" VerticalOptions="Center">
        <!-- Título de la app -->
        <Label Text="Xamarin - Form and CV"
               FontSize="30"
               FontAttributes="Bold"
               HorizontalOptions="Center" 
               TextColor="White"/>

        <!-- Descripción breve del CV -->
        <Label Text="CV estático"
               FontSize="18"
               HorizontalOptions="Center"
               Margin="0,20" 
               TextColor="White"/>

        <!-- Botón para ir a la página del CV -->
        <Button Text="Ver CV" 
                FontSize="18" 
                Clicked="OnCvPageButtonClicked" 
                HorizontalOptions="Center" 
                Margin="0,20" 
                BackgroundColor="#083c6c"
                TextColor="White"/>
    </StackLayout>
</ContentPage>
